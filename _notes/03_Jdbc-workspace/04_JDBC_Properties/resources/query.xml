<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>

	<!--
		xml 파일에서의 주석
	-->
	<!-- 회원추가용 쿼리문 -->
	<entry key="insertMember">
		INSERT INTO MEMBER VALUES(SEQ_USERNO.NEXTVAL
												, ?
												, ?
												, ?
												, ?
												, ?
												, ?
												, ?
												, ?
												, DEFAULT)
	</entry>
	<!-- 회원전체조회용 쿼리문 -->
	<entry key="selectAll">
		SELECT *
		  FROM MEMBER
	  ORDER BY USERNO ASC
	</entry>
	
	<!-- 회원 아이디로 검색용 쿼리문 -->
	<entry key="selectByUserId">
		SELECT *
		  FROM MEMBER
		 WHERE USERID = ?
	</entry>
	
	<!-- 회원 이름키워드 검색용 쿼리문 -->
	<entry key="selectByUserName">
		SELECT *
		  FROM MEMBER
		 WHERE USERNAME LIKE ?
	</entry>
	
	<!-- 회원정보수정용 쿼리문 -->
	<entry key="updateMember">
		UPDATE MEMBER
		   SET USERPWD = ?
		     , EMAIL = ?
		     , PHONE = ?
		     , ADDRESS = ?
		 WHERE USERID = ?
	</entry>
	
	<!-- 회원탈퇴용 쿼리문 -->
	<entry key="deleteMember">
		DELETE
		  FROM MEMBER
		 WHERE USERID = ?
	</entry>
	<entry key="selectAll">
		 SELECT * FROM TB_PRODUCT </entry>
		 
	<!--  회원추가용 쿼리문  -->
	<entry key="insertProduct"> 
		INSERT INTO TB_PRODUCT VALUES(? , ? , ? , ? , ?)
		
	</entry>
	
	<!--  회원수정용 쿼리문  -->
	<entry key="updateProduct">
		 UPDATE TB_PRODUCT SET PR_NAME = ? , PR_BRAND = ? , PR_PRICE = ? , PR_STOCK = ? WHERE PR_CODE = ? 
		 
	</entry>
	
	<!-- 제푹삭제용 쿼리문 -->
	<entry key="deleteProduct">
		DELETE
		  FROM TB_PRODUCT
		 WHERE PR_CODE = ?
	
	</entry>
	
	<!-- 제품검색용(품명) 쿼리문 -->
	<entry key="selectByName">
		SELECT *
		  FROM TB_PRODUCT
		 WHERE PR_NAME LIKE ? 
	
	</entry>
	
	<!-- 제품검색용(브랜드) 쿼리문 -->
	<entry key="selectByBrand">
		SELECT *
		  FROM TB_PRODUCT
		 WHERE PR_BRAND LIKE ?
	
	</entry>
	
</properties>
